@model QLNhanSu.Models.HT_USER

@{
    ViewBag.Title = "F203_Update";
    var id = Model.ID;
    var userName = Model.USERNAME;
    var idUserGroup = Model.ID_USER_GROUP;
    var maNhanVien = Model.BHYT;
}

<link href="~/Content/selectize.default.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/selectize.js"></script>
<script src="~/Scripts/index.js"></script>
<script src="~/Scripts/jquery-user.js"></script>
<script src="~/Scripts/jquery-fb.js"></script>

<h2 class="title-page">F203 Cập nhật thông tin người dùng</h2>

<div class="container-fluid">
    @using (Html.BeginForm("F203_Update", "User", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        @Html.Hidden("v_ID", id)
        @Html.Hidden("v_UserName", userName)
        @Html.Hidden("v_IdUserGroup", idUserGroup)
        @Html.Hidden("v_MaNhanVien", maNhanVien)
        <div class="form-group">
            <label for="txtMaNhanVien" class="col-sm-2 control-label">Mã nhân viên</label>
            <div class="col-sm-10">
                <select id="txtMaNhanVien" name="txtMaNhanVien" placeholder="Gõ để tìm kiếm">
                </select>
                <span class="loading-ma-nhan-vien"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="txtUserName" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtUserName" name="txtUserName" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <label for="ID_USER_GROUP" class="col-sm-2 control-label">Nhóm người dùng</label>
            <div class="col-sm-4">
                @Html.DropDownListFor(m => m.ID_USER_GROUP, (SelectList)ViewBag.ID_USER_GROUP, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="txtUserName" class="col-sm-2 control-label">Facebook</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="txtFacebook" name="txtFacebook" />
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a href="@Url.Action("F201_DanhMucNhanVien", "User")" class="btn btn-danger">Hủy bỏ</a>
            </div>
        </div>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="modalListMembersGroup" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="modalBodyListMembersGroup">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="fb-root"></div>
        <input type="checkbox" class="lien-quan" name="optionsThamGiaDuAn" id="optionsThamGiaDuAn" value="C" checked="checked">
        Tham gia dự án
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" class="lien-quan" name="optionsThamGiaDuAn" id="optionsDiCongTac" value="D" checked="checked">
        Đi công tác
    </label>
</div>

<div class="table-responsive">

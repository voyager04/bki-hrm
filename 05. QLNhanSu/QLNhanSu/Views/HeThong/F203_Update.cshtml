@model QLNhanSu.Models.HT_USER

@{
    ViewBag.Title = "F203_Update";
    var id = Model.ID;
    var userName = Model.USERNAME;
    var idUserGroup = Model.ID_USER_GROUP;
    var maNhanVien = Model.BHYT;
}

<link href="~/Content/selectize.default.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/selectize.js"></script>
<script src="~/Scripts/index.js"></script>
<script src="~/Scripts/jquery-user.js"></script>

<h2>F203 Cập nhật thông tin người dùng</h2>

@using (Html.BeginForm("F203_Update", "HeThong", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.Hidden("v_ID", id)
    @Html.Hidden("v_UserName", userName)
    @Html.Hidden("v_IdUserGroup", idUserGroup)
    @Html.Hidden("v_MaNhanVien", maNhanVien)
    <div class="form-group">
        <label for="txtMaNhanVien" class="col-sm-2 control-label">Mã nhân viên</label>
        <div class="col-sm-10">
            <select id="txtMaNhanVien" name="txtMaNhanVien" placeholder="Gõ để tìm kiếm">
            </select>
            <span class="loading-ma-nhan-vien"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="txtUserName" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtUserName" name="txtUserName" placeholder="Email">
        </div>
    </div>
    <div class="form-group">
        <label for="ID_USER_GROUP" class="col-sm-2 control-label">Nhóm người dùng</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.ID_USER_GROUP, (SelectList)ViewBag.ID_USER_GROUP, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Lưu</button>
            <a href="@Url.Action("F201_DanhMucNhanVien", "HeThong")" class="btn btn-danger">Hủy bỏ</a>
        </div>
    </div>
}